{
  "files": ["./src/index.ts"],
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": false,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
